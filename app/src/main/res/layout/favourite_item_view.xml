<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="favouriteList"
            type="com.pratik.erostestapp.model.Result" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/favouriteItemImageVIew"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_gravity="center_vertical"
                app:imageUrl="@{favouriteList.poster_path}" />

            <TextView
                android:id="@+id/faouriteItemDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:padding="4dp"
                app:description="@{favouriteList.overview}" />
        </LinearLayout>

        <ImageView
            android:id="@+id/favouriteBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@{favouriteList.favourite? @drawable/ic_heart_selected :@drawable/ic_heart }" />
        />
    </androidx.cardview.widget.CardView>
</layout>